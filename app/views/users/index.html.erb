<% if @users.any? %>
  <ul class="list-unstyled">
    <% @users.each do |user| %>
    <li class="media">
      <% if user.image? %>
        <%= link_to image_tag(user.image.thumb100.url, alt: "user_image_#{user.id}"), user_path(user), class: "mr-2 mb-2 border border-primary" %>
      <!--デフォルトアイコン停止中-->
      <%# else %>
        <!--<image src="/assets/default.png" class="icon mr-2 mb-2 border border-primary" alt="ユーザーアイコン" %>-->
      <% end %>
      <div class="pt-4">
        <%= link_to user.name, user_path(user) %> 
      </div>
    </li>
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>  