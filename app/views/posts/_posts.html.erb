<% if posts.any? %>
  <div class="section pb-5">
    <div class="d-flex flex-wrap justify-content-sm-between">
      <% posts.each do |post| %>
      <div class="card" style="width: 20rem;">
        <% if post.image? %>
        <%= link_to image_tag(post.image.thumb2.url), post_path(post), class: "card-img-top", alt: "Card image cap" %>
        <% else %>
        <p>画像なし</p>
        <% end %>
        <div class="card-body">
          <span><%= link_to image_tag(post.user.image.thumb50.url), user_path(post.user) %></span><h4><%= link_to post.title, post_path(post), class: "card-title" %></h4>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <%= paginate posts %>
<% end %>